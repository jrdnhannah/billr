<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="hclabs_bills.serializer_factory.class">HCLabs\Bills\Serialization\SerializerFactory</parameter>
        <parameter key="jms.serializer.class">JMS\Serializer\Serializer</parameter>
    </parameters>

    <services>
        <service id="hclabs_bills.serializer"
                 class="%jms.serializer.class%"
                 factory-class="%hclabs_bills.serializer_factory.class%"
                 factory-method="create" />
    </services>
</container>