<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="doctrine.object_repository.class">Doctrine\Common\Persistence\ObjectRepository</parameter>
    </parameters>
    <services>
        <service id="hclabs_bills.repository.account"
                 class="%doctrine.object_repository.class%"
                 factory-service="doctrine"
                 factory-method="getRepository">
            <argument>HCLabs\Bills\Model\Account</argument>
        </service>

        <service id="hclabs_bills.repository.bill"
                 class="%doctrine.object_repository.class%"
                 factory-service="doctrine"
                 factory-method="getRepository">
            <argument>HCLabs\Bills\Model\Bill</argument>
        </service>
    </services>
</container>