<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="hclabs_bills.dashboard_controller.index" path="/">
        <default key="_controller">hclabs_bills.controller.dashboard_controller:indexAction</default>
    </route>

    <route id="hclabs_bills.account_controller.open" path="/account/open" methods="GET">
        <default key="_controller">hclabs_bills.controller.account_controller:openAction</default>
    </route>
    
    <route id="hclabs_bills.account_controller.process" path="/account/open" methods="POST">
        <default key="_controller">hclabs_bills.controller.account_controller:processAccountCreationAction</default>
    </route>
</routes>